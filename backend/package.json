{
    "name": "mancala-backend",
    "version": "1.0.0",
    "description": "Backend server for Mancala blockchain game with Honeycomb Protocol integration",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node src/server.ts",
        "dev:watch": "ts-node --watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "start:prod": "NODE_ENV=production node dist/server.js",
        "clean": "rm -rf dist",
        "rebuild": "npm run clean && npm run build",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "tsc --noEmit",
        "logs:debug": "LOG_LEVEL=debug npm run dev",
        "logs:info": "LOG_LEVEL=info npm run dev",
        "logs:warn": "LOG_LEVEL=warn npm run dev",
        "logs:error": "LOG_LEVEL=error npm run dev"
    },
    "keywords": [
        "mancala",
        "blockchain",
        "honeycomb",
        "solana",
        "game",
        "backend"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@honeycomb-protocol/edge-client": "^0.0.7-beta.15",
        "@solana/web3.js": "^1.98.4",
        "bs58": "^5.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.1",
        "express": "^4.18.2",
        "pino": "^8.17.2",
        "pino-pretty": "^10.3.1",
        "tweetnacl": "^1.0.3",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}